---
import Vector1Desktop from '../images/desktop/Vector 1.svg';
import Vector3Desktop from '../images/desktop/Vector 3.svg';
import ArrowSmallRight from '../images/desktop/arrow-small-right.svg';
import mail from '../images/desktop/mail.svg';
import Location from '../images/mobile/Location-Icon.svg';
import Vector1 from '../images/mobile/Vector 1.svg';
import Vector2 from '../images/mobile/Vector 2.svg';
import Vector3 from '../images/mobile/Vector 3.svg';
import chevronleft from '../images/mobile/chevron-circle-left.svg';
import chevronright from '../images/mobile/chevron-circle-right.svg';
import pexels from '../images/mobile/pexels-michelangelo-buonarroti-8728382 1.png';
import mobile from '../images/mobile/phone-call.svg';
import Carousel from './carouseles/Carousel.astro';
---

<section
	class='z-40 flex justify-center items-center flex-col w-full relative overflow-hidden'>
	<article
		class='flex justify-center items-center flex-col-reverse md:flex-row md:justify-between md:w-[86%] mt-12 md:mt-5'>
		<div
			class='z-30 flex justify-center items-center md:gap-5 flex-col mt-10 md:pr-[12%] md:items-start md:w-[50%]'>
			<h1
				class='z-50 text-3xl text-balance text-center md:text-left font-bold bg-gradient-to-r from-primary from-100% via-secundary via-100% to-white to-0% text-transparent bg-clip-text'>
				Dive
				<span class='text-customtext text-2xl'>Into The Depths</span>

				<span class='text-customtext text-2xl font-bold'>of</span>
				Virtual Reality
			</h1>
			<p class='hidden md:flex text-customtext text-pretty'>
				Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
				tempor incididunt ut labore et dolore nisl tincidunt eget. Lectus mauris
				eros in vitae .
			</p>
			<div class='flex items-center gap-x-5 mt-5 md:mt-0 mb-9'>
				<a
					class='flex justify-center items-center [background:linear-gradient(90deg,_#8176AF_0%,_#C0B7E8_100%)] py-3 px-12 rounded-full hover:animate-pulse-two text-sm font-bold text-customtextDark md:text-nowrap'
					href=''
					>BUILD YOUR WORLD</a
				>
				<div>
					<img
						class='hidden md:flex'
						src={ArrowSmallRight.src}
						alt='arrow-small-right'
					/>
				</div>
			</div>
		</div>
		<div class='flex justify-center items-center md:w-[50%] md:pl-[5%]'>
			<div
				class='z-50 mt-8 flex justify-center items-center rounded-tl-3lg rounded-tr-3lg rounded-br-3lg rounded-bl-5lg bg-fondo w-4/5 p-2'>
				<img
					class='rounded-tl-3lg rounded-tr-3lg rounded-br-3lg rounded-bl-5lg w-full'
					src={pexels.src}
					alt='pexels-michelangelo'
				/>
			</div>
			<img
				class='z-20 md:hidden absolute left-[24%] bottom-[20%] animate-pulse'
				src={Vector1.src}
				alt='vector'
			/>
			<img
				class='z-20 md:hidden absolute bottom-[18%] right-[19%] animate-pulse'
				src={Vector2.src}
				alt='vector'
			/>
			<img
				class='z-20 md:hidden absolute bottom-[74px] animate-pulse'
				src={Vector3.src}
				alt='vector'
			/>
			<img
				class='z-20 hidden md:block absolute top-[-25px] right-[49px] transform rotate-[8deg] animate-pulse'
				src={Vector1Desktop.src}
				alt='vector'
			/>
			<img
				class='z-20 hidden md:block absolute top-[168px] right-[-50px] animate-pulse'
				src={Vector3Desktop.src}
				alt='vector'
			/>
		</div>
	</article>
	<article
		class='hidden w-[90%] md:w-[86%] md:flex justify-center items-center [background:radial-gradient(50%_2900.76%_at_50%_53.89%,_rgba(58,_52,_86,_0.95)_0%,_#211E2E_100%)] rounded-full px-5 py-4 md:mt-8 relative'>
		<ul
			class='flex flex-row flex-nowrap w-full md:justify-around overflow-x-hidden'>
			<li class='flex justify-center items-center w-[350px] md:gap-x-4'>
				<img
					src={Location.src}
					alt='Location-Icon'
				/>
				<div>
					<h2 class='font-bold text-customtext text-2xl'>Pay Us a Visit</h2>
					<span class='text-sm font-normal text-customtext'
						>Union St, Seattle, WA 98101, United States</span
					>
				</div>
			</li>
			<li class='hidden md:block'>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					width='1'
					height='117'
					viewBox='0 0 1 117'
					fill='none'>
					<path
						d='M0.5 116.5V0'
						stroke='#C0B7E8'
						stroke-opacity='0.33'
					></path>
				</svg>
			</li>
			<li class='hidden md:flex justify-center items-center gap-x-4'>
				<img
					src={mobile.src}
					alt='phone-call'
				/>
				<div>
					<h2 class='font-bold text-customtext text-2xl'>Give Us a Call</h2>
					<span class='text-sm font-normal text-customtext'
						>(110) 1111-1010</span
					>
				</div>
			</li>
			<li class='hidden md:block'>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					width='1'
					height='117'
					viewBox='0 0 1 117'
					fill='none'>
					<path
						d='M0.5 116.5V0'
						stroke='#C0B7E8'
						stroke-opacity='0.33'
					></path>
				</svg>
			</li>
			<li class='hidden md:flex justify-center items-center gap-x-4'>
				<img
					src={mail.src}
					alt='mail'
				/>
				<div>
					<h2 class='font-bold text-customtext text-2xl'>Send Us a Message</h2>
					<span class='text-sm font-normal text-customtext'
						>Contact@HydraVTech.com</span
					>
				</div>
			</li>
		</ul>
		<div class='md:hidden absolute flex top-0 left-0 w-full h-full'>
			<div class='my-auto w-full flex justify-between px-1'>
				<button class='z-50'>
					<img
						id='prev'
						src={chevronleft.src}
						alt='circle-left'
					/>
				</button>
				<button class=''>
					<img
						id='next'
						src={chevronright.src}
						alt='circle-right'
					/>
				</button>
			</div>
		</div>
	</article>
	<Carousel />
</section>
